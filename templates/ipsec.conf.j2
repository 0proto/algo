config setup
	uniqueids = never # allow multiple connections per user

conn %default
    dpdaction=clear
    dpddelay=35s
    dpdtimeout=300s
    rekey=no
	keyexchange=ikev2
    ike=aes256-sha1-modp1024!
    esp=aes256-sha1!
	compress=yes
	fragmentation=yes
	
    left=%any
    leftauth=pubkey
    leftid={{ server_name }}
    leftcert={{ server_name }}.crt
    leftsendcert=always
    leftsubnet=0.0.0.0/0,::/0

    right=%any
    #rightauth=pubkey
    rightsourceip=10.0.0.0/24
    rightdns=8.8.8.8,8.8.4.4

conn ikev2-pubkey
    auto=add

    
    
